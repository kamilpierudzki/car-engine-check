<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_dtc_icon"
        android:layout_width="@dimen/Dtc.Item.Icon.Size"
        android:layout_height="@dimen/Dtc.Item.Icon.Size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_dtc_background"
        android:gravity="center"
        android:text="C"
        android:textStyle="bold"
        android:textSize="@dimen/Dtc.Item.Icon.Text"
        android:textColor="@color/Dtc.Item.Icon.Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dtc_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="72dp"
        android:text="C1759"
        android:textColor="@color/Dtc.Item.Code"
        android:textSize="@dimen/Dtc.Item.Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_dtc_icon" />

    <TextView
        android:id="@+id/item_dtc_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="Air Suspension Front Height Sensor High (SE) Signal Circuit Short To Ground"
        android:textColor="@color/Dtc.Item.Desc"
        android:textSize="@dimen/Dtc.Item.Desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_dtc_code" />

</android.support.constraint.ConstraintLayout>