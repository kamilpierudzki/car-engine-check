<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_pos_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Plac wolności, Poznań"
        android:textColor="@color/History.Map.Toolbar.Text"
        android:textSize="@dimen/History.Map.Toolbar.TextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/start_icon"
        android:layout_width="@dimen/History.Map.Toolbar.Icon.Size"
        android:layout_height="@dimen/History.Map.Toolbar.Icon.Size"
        app:layout_constraintBottom_toBottomOf="@+id/start_pos_label"
        app:layout_constraintTop_toTopOf="@+id/start_pos_label"
        app:srcCompat="@drawable/map_fragment_start_point" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dot1"
        android:layout_width="@dimen/History.Map.Toolbar.Icon.Size.Small"
        android:layout_height="@dimen/History.Map.Toolbar.Icon.Size.Small"
        android:layout_marginTop="2dp"
        android:tint="@color/History.Map.Icon"
        app:layout_constraintEnd_toEndOf="@+id/start_icon"
        app:layout_constraintStart_toStartOf="@+id/start_icon"
        app:layout_constraintTop_toBottomOf="@+id/start_pos_label"
        app:srcCompat="@drawable/map_fragment_dot" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dot2"
        android:layout_width="@dimen/History.Map.Toolbar.Icon.Size.Small"
        android:layout_height="@dimen/History.Map.Toolbar.Icon.Size.Small"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:tint="@color/History.Map.Icon"
        app:layout_constraintEnd_toEndOf="@+id/end_icon"
        app:layout_constraintStart_toStartOf="@+id/end_icon"
        app:layout_constraintTop_toBottomOf="@+id/dot1"
        app:srcCompat="@drawable/map_fragment_dot" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/end_icon"
        android:layout_width="@dimen/History.Map.Toolbar.Icon.Size"
        android:layout_height="@dimen/History.Map.Toolbar.Icon.Size"
        app:layout_constraintBottom_toBottomOf="@+id/end_pos_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/end_pos_label"
        app:srcCompat="@drawable/map_fragment_end_point" />

    <TextView
        android:id="@+id/end_pos_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="Galeria malta, Poznań"
        android:textColor="@color/History.Map.Toolbar.Text"
        android:textSize="@dimen/History.Map.Toolbar.TextField"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/end_icon"
        app:layout_constraintTop_toBottomOf="@+id/dot2" />

</android.support.constraint.ConstraintLayout>